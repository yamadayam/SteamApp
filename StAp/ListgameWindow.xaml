<Window x:Class="StAp.ListgameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StAp"
        mc:Ignorable="d"
        Title="ListgameWindow" Height="450" Width="420" Loaded="Window_Loaded">
    <Grid>
        <ListView x:Name="listView"  ItemsSource="{Binding}" MouseDoubleClick="listView_MouseDoubleClick" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Picture" Width="130" >
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="{Binding Picture}" />
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Name}" Width="130" Header="Name"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Other}" Width="130" Header="Other"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
